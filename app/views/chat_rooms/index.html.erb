<div class="flex flex-col items-center" data-controller="chat-rooms">
  <div class="w-full lg:w-9/12 md:px-16">
    <div class="min-w-full py-6 px-4 sm:px-6 lg:px-8">
      <h1 class="text-2xl lg:text-3xl font-bold text-gray-900">
        Chat Rooms
      </h1>
    </div>

    <div class="min-w-full pb-6 px-4 sm:px-6 lg:px-8">
      <%= form_tag chat_rooms_path, method: :get do %>
        <div class="mt-1 flex rounded-md shadow-sm">
          <span class="mt-1 block px-3 py-2 shadow-sm border border-gray-300 rounded-l-md sm:text-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="gray">
              <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
            </svg>
          </span>
          <%= search_field_tag :search, params[:search], placeholder: 'Search', class: %w[mt-1 block w-full px-3 py-2 shadow-sm border border-l-0 border-gray-300 rounded-r-md sm:text-sm] %>
        </div>
      <% end %>
    </div>

    <div class="min-w-full pb-6 px-4 sm:px-6 lg:px-8">
        <%= render @chat_rooms %>

        <% 2.times do  %>
          <div class="border border-indigo-300 shadow rounded-md p-2.5 mb-4 w-full mx-auto hidden" data-chat-rooms-target="skeletonLoader">
            <div class="animate-pulse flex">
              <div class="flex-1 space-y-2.5">
                <div class="h-3 bg-indigo-400 rounded w-1/2"></div>
                <div class="h-3 bg-indigo-400 rounded w-5/6"></div>
              </div>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
