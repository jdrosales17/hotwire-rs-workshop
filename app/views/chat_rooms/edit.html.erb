<div class="flex flex-col items-center">
  <div class="w-full lg:w-9/12 md:px-16">
    <div class="min-w-full py-6 px-4 sm:px-6 lg:px-8">
      <h1 class="text-2xl lg:text-3xl font-bold text-gray-900">
        <%= "Chat Room - #{chat_room.name}" %>
      </h1>
    </div>

    <div class="min-w-full pb-6 px-4 sm:px-6 lg:px-8">
      <%= turbo_frame_tag dom_id(chat_room) do %>
        <%= form_with model: chat_room do |f| %>
          <div class="shadow overflow-hidden mb-4 sm:rounded-md">
            <div class="px-4 py-5 bg-white sm:p-6">
              <div class="grid grid-cols-1">
                <div class="col-span-1">
                  <%= f.label :name, class: %w[block text-sm font-medium text-gray-700] %>
                  <%= f.text_field :name, class: %w[mt-1 block w-full px-3 py-2 shadow-sm border border-gray-300 rounded-md sm:text-sm] %>
                </div>
              </div>
            </div>
            <div class="px-4 py-3 bg-gray-100 text-right sm:px-6">
              <%= f.submit 'Update', class: %w[inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-500 hover:bg-indigo-600 cursor-pointer] %>
              <%= link_to 'Cancel', authenticated_root_path, class: %w[inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-500 hover:bg-indigo-600] %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
